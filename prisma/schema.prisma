generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model League {
  id Int @id @default(autoincrement())
  name String
  teams Team[]
  seasons season[]
}

model Team {
  id String @id @unique
  name String @unique
  team_owner String @default("")
  championships String?
  players Player[]
  league League @relation(fields: [leagueId], references: [id])
  leagueId Int
  game_team_stats game_team_stats[]
}

model Player {
  id Int @id @default(autoincrement())
  uuid String @unique 
  username String 
  number Int @default(0)
  goalie Boolean @default(false)
  awards String? 
  league_roles String? 
  team Team @relation(fields: [teamId], references: [id])
  teamId String
  old_all_time_player_stats old_all_time_player_stats[]
  game_player_stats game_player_stats[]
  game_goalie_stats game_goalie_stats[]
}

model season {
  id Int @id @default(autoincrement())
  name String
  league League @relation(fields: [leagueId], references: [id])
  leagueId Int
  games games[]
}

model games {
  id Int @id @default(autoincrement())
  date DateTime 
  is_playoff Boolean @default(false)
  is_overtime Boolean @default(false)
  season season @relation(fields: [seasonId], references: [id])
  seasonId Int
  game_team_stats game_team_stats[]
  game_player_stats game_player_stats[]
  game_goalie_stats game_goalie_stats[]
}

model game_team_stats {
  id Int @id @default(autoincrement())
  team Team @relation(fields: [teamId], references: [id])
  teamId String
  goals_scored Int @default(0)
  goals_allowed Int @default(0)
  game games @relation(fields: [gameId], references: [id])
  gameId Int
}

model game_player_stats {
  id Int @id @default(autoincrement())
  player Player @relation(fields: [playerId], references: [id])
  playerId Int
  goals_scored Int @default(0)
  assists Int @default(0)
  touches Int @default(0)
  time_on_ice Int @default(0)
  game games @relation(fields: [gameId], references: [id])
  gameId Int
}

model game_goalie_stats {
  id Int @id @default(autoincrement())
  player Player @relation(fields: [playerId], references: [id])
  playerId Int
  shots Int @default(0)
  saves Int @default(0)
  goals_allowed Int @default(0)
  game games @relation(fields: [gameId], references: [id])
  gameId Int
}

model old_all_time_player_stats {
  id Int @id @default(autoincrement())
  player Player @relation(fields: [playerId], references: [id])
  playerId Int
  games_played Int @default(0)
  goals_scored Int @default(0)
  assists Int @default(0)
  points Int @default(0)
  shots Int @default(0)
  saves Int @default(0)
  goals_allowed Int @default(0)
}
